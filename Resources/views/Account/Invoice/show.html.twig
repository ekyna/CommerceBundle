{% extends "EkynaCommerceBundle:Account:layout.html.twig" %}

{% block account %}
    {% spaceless %}
        <h3>{{ 'ekyna_commerce.account.invoice.show'|trans({'%number%': invoice.number})|raw }}</h3>
        <p>
            Créée le <em>{{ invoice.createdAt|localizeddate('short', 'none') }}</em>. {# TODO translations #}
        </p>
        <hr>


        <table class="table table-condensed table-alt table-striped">
            <thead>
            <tr>
                <th>{{ 'ekyna_core.field.designation'|trans }}</th>
                <th>{{ 'ekyna_core.field.reference'|trans }}</th>
                {#<th>{{ 'ekyna_commerce.invoice_line.field.net_price'|trans }}</th>#}
                <th>{{ 'ekyna_core.field.quantity'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for line in invoice.lines %}
                <tr>
                    <td>
                        {{- line.designation -}}
                        {%- if line.description is not empty -%}
                            <br><p style="font-size:11px;padding-left:12px;">{{ line.description|nl2br }}</p>
                        {%- endif -%}
                    </td>
                    <td>{{ line.reference }}</td>
                    {#<td id="{{ lineId ~ '_netPrice' }}">{{ line.netUnit|localizedcurrency(invoice.currency.code) }}</td>#}
                    <td>{{ line.quantity|localizednumber }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p class="text-center">
            <a href="{{ path('ekyna_commerce_account_invoice_download', {'number': invoice.number}) }}"
               class="btn btn-primary" target="_blank">
                {{- 'ekyna_core.button.download'|trans -}}
            </a>
        </p>

        <br><br>
        <h3>{{ 'ekyna_commerce.account.invoice.title'|trans|raw }}</h3>
        <hr>
        {% include "EkynaCommerceBundle:Account/Invoice:_list.html.twig" with {
            'invoices': invoices
        } only %}

    {% endspaceless %}
{% endblock %}

{% block stylesheets %}
    {{- parent() -}}
    <link href="{{ asset('bundles/ekynacommerce/css/sale-view.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}
