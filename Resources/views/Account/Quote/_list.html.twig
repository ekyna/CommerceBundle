{% apply spaceless %}
{% set show_customer = not customer.hasParent() %}
<div class="table-responsive">
<table class="table table-stripped">
    <thead>
    <tr>
        <th>{{ 'field.number'|trans({}, 'EkynaUi') }}</th>
        {% if show_customer -%}
        <th>{{ 'sale.field.origin_customer'|trans({}, 'EkynaCommerce') }}</th>
        {%- endif %}
        <th>{{ 'field.title'|trans({}, 'EkynaUi') }}</th>
        <th>{{ 'sale.field.voucher_number'|trans({}, 'EkynaCommerce') }}</th>
        <th>{{ 'sale.field.ati_total'|trans({}, 'EkynaCommerce') }}</th>
        <th>{{ 'field.date'|trans({}, 'EkynaUi') }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for quote in quotes %}
        {% set path = path('ekyna_commerce_account_quote_read', {'number': quote.number}) %}
        <tr>
            <td>
                <a href="{{ path }}">{{ quote.number }}</a>
            </td>
            {% if show_customer -%}
            <td>
                {{- quote.customer|identity -}}
            </td>
            {% endif -%}
            <td>{{ quote.title }}</td>
            <td>
                {%- if quote.voucherNumber is not empty -%}
                    {{ quote.voucherNumber }}
                {%- else -%}
                    &dash;
                {%- endif -%}
            </td>
            <td class="text-right">
                {{- quote.grandTotal|currency_quote(quote) -}}
            </td>
            <td>
                {{- quote.createdAt|format_datetime('short', 'none') -}}
            </td>
            <td class="text-right">
                <a href="{{ path }}" class="btn btn-xs btn-default">
                    {{- 'button.show'|trans({}, 'EkynaUi') -}}
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="{{ show_customer ? 6 : 5 }}">
                <em>{{ 'account.quote.empty_list'|trans({}, 'EkynaCommerce') }}</em>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endapply %}
