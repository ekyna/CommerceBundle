{% extends "EkynaCommerceBundle:Account:layout.html.twig" %}

{% block account %}
{% spaceless %}
    <h3>{{ 'ekyna_commerce.account.quote.title'|trans|raw }}</h3>
    <hr>
    {% include "EkynaCommerceBundle:Account/Quote:_list.html.twig" with {'quotes': quotes} only %}

    {% if childrenQuotes is not null %}
    <br><br><br>
    <h3>{{ 'ekyna_commerce.account.quote.children_title'|trans|raw }}</h3>
    <hr>
    {% include "EkynaCommerceBundle:Account/Quote:_list.html.twig" with {'quotes': childrenQuotes, 'show_child': true} only %}
    {% endif %}
{% endspaceless %}
{% endblock account %}
