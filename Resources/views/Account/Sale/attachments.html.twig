{% spaceless %}
<div class="panel panel-default">
    <div class="panel-heading">
        <a href="{{ path(route_prefix ~ '_attachment_create', {'number': sale.number}) }}"
            class="btn btn-xs btn-success pull-right">
            {{ 'ekyna_core.button.add'|trans }}
        </a>
        {{ 'ekyna_commerce.account.attachment.title'|trans|raw }}
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'ekyna_core.field.file'|trans }}</th>
                <th>{{ 'ekyna_core.field.title'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {%- for attachment in sale|sale_attachments -%}
                {%- set path = path(route_prefix ~ '_attachment_download', {'number': sale.number, 'id': attachment.id}) -%}
                <tr>
                    <td>
                        <a href="{{ path }}" target="_blank">
                            {{- attachment -}}
                        </a>
                    </td>
                    <td>
                        {{- attachment.title -}}
                    </td>
                    <td class="text-right">
                        <a href="{{ path }}" target="_blank" class="btn btn-primary btn-xs">
                            {{- 'ekyna_core.button.download'|trans -}}
                        </a>
                    </td>
                </tr>
            {%- endfor -%}
            </tbody>
        </table>
    </div>
</div>
{% endspaceless %}
