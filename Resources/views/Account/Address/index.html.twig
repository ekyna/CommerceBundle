{% extends "EkynaCommerceBundle:Account:layout.html.twig" %}

{% block account %}
{% spaceless %}

    {% include "EkynaCommerceBundle:Account/Address:_list.html.twig" %}

    <hr>

    <p>
        <a href="{{ path('ekyna_commerce_account_address_add') }}" class="btn btn-sm btn-primary">
            {{ 'ekyna_commerce.account.address.add.title'|trans }}
        </a>
    </p>

    {% if parent_addresses is defined and parent_addresses is not empty %}
        <br><br>
        {% include "EkynaCommerceBundle:Account/Address:_list.html.twig" with {
            'title': 'ekyna_commerce.account.address.parent_title',
            'addresses': parent_addresses,
            'buttons': false
        } %}
    {% endif %}

{% endspaceless %}
{% endblock account %}
