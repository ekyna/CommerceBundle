{% extends "EkynaCommerceBundle:Account:layout.html.twig" %}

{% block account %}
{% spaceless %}
    <h3>{{ 'ekyna_commerce.account.address.edit.title'|trans }}</h3>

    <hr>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-body">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ bootstrap_set_label_col(2) }}
        {{ bootstrap_set_widget_col(10) }}

        {{ form_widget(form) }}
    </div>
    {{ ivory_google_api() }}
    {{ form_end(form) }}

    <br><br>

    {% include "EkynaCommerceBundle:Account/Address:_list.html.twig" %}

{% endspaceless %}
{% endblock account %}
