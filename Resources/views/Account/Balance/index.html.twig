{% extends '@EkynaCommerce/Account/layout.html.twig' %}

{% block account %}
{% apply spaceless %}
    <h3>{{ 'account.balance.title'|trans({}, 'EkynaCommerce') }}</h3>
    <hr>
    {{ customer|payment_method_notice }}
    {% include "@EkynaCommerce/Customer/balance.html.twig" with {
        'balance': balance,
        'form': form
    } only %}
{% endapply %}
{% endblock account %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">require(['ekyna-commerce/customer-balance']);</script>
{% endblock javascripts %}
