{% apply spaceless %}
<form id="newsletter-quick-subscription">
    <p class="title">
        {{- 'newsletter.subscription.title'|trans({}, 'EkynaCommerce')|raw -}}
    </p>
    <p class="content">
        {{- 'newsletter.subscription.content'|trans({}, 'EkynaCommerce')|raw -}}
    </p>
    <p class="alert alert-success success" style="display:none">
        {{- 'newsletter.subscription.success'|trans({}, 'EkynaCommerce')|raw -}}
    </p>
    <div class="row">
        <div class="col-sm-12">
            <input type="email" class="form-control input-sm" id="email" name="email"
                   placeholder="{{ 'field.email_address'|trans({}, 'EkynaUi') }}" required>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <input type="hidden" name="key" value="{{ key }}">
            {# TODO Csrf protection #}
            <button type="submit" class="btn btn-primary btn-sm">
                {{- 'newsletter.button.subscribe'|trans({}, 'EkynaCommerce') -}}
            </button>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-link btn-sm"
               href="{{ path('ekyna_commerce_newsletter_subscription') }}">
                {{- 'newsletter.button.more_options'|trans({}, 'EkynaCommerce') -}}
            </a>
        </div>
    </div>
</form>
<script type="text/javascript">
    require(['ekyna-commerce/newsletter-quick-subscription'], function(Newsletter) {
        Newsletter.init('#newsletter-quick-subscription');
    });
</script>
{% endapply %}
