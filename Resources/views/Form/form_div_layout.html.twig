                    <th>{{ 'ekyna_core.field.reference'|trans }}</th>
                    <th width="15%">{{ 'ekyna_core.field.quantity'|trans }}</th>
                    <th width="15%">{{ 'ekyna_commerce.supplier_order_item.field.net_price'|trans }}</th>
                    <th></th>
                </tr>
