{% extends '@EkynaAdmin/Entity/Crud/delete.html.twig' %}

{% block title %}
    <h1>{{ (context.config.transPrefix ~ '.header.create_user')|trans({}, context.config.transDomain)|raw }}</h1>
{% endblock title %}

{% block main %}
    <div class="alert alert-info">
        <p>
            {{ 'customer.message.create_user'|trans({
                '{identity}': resource|identity,
                '{email}': resource.email
            }, 'EkynaCommerce')|raw }}
        </p>
    </div>
    {{ bootstrap_set_style('horizontal') }}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-body">
        {{ form_errors(form, {'global_errors': true}) }}
        {{ form_row(form.confirm) }}
        {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}
{% endblock main %}
