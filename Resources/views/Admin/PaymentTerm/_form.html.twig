{% extends '@EkynaAdmin/Entity/Crud/_form_default.html.twig' %}

{% block main_contents -%}
    <div class="tab-pane active" id="{{ resource_name }}-general">
        {{ form_row(form.name) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.days, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.endOfMonth, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
        {{ form_row(form.trigger) }}
        {{ form_row(form.translations, {'label_col': 0, 'widget_col': 12}) }}
    </div>
{%- endblock main_contents %}
