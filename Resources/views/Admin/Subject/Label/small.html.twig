{% extends '@EkynaCommerce/Admin/Subject/Label/base.html.twig' %}

{% block styles %}
    <style>
        @media print {
            html,
            body {
                margin: 0;
                padding: 0;
                text-rendering: optimizeLegibility;
                width: 100%;
                height: 100%;
            }

            .label {
                page-break-after: always;
                overflow: hidden;
                box-sizing: border-box;
                width: 100%;
                height: 100%;
            }
        }

        .label {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .label > p {
            flex: 1 1 initial;
            margin: 0;
            padding: 0;
            text-align: center;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .label > p {
            flex: 1 1 initial;
            margin: 0;
            padding: 0;
            text-align: center;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .label .barcode-image img {
            width: 100%;
            height: 100%;
        }

        .label-small {
            font-size: 12px;
            line-height: 16px;
        }

        .label-small > .designation {
            max-height: 32px;
        }

        .label-small > .references {
            display: flex;
            justify-content: space-between;
        }

        .label-small > .references > span {
            flex: 1 1 initial;
        }
    </style>
{% endblock styles %}

{% block label %}
    <div class="label label-small">
        <p class="designation">{{ label.designation|default('&nbsp;')|raw }}</p>
        <p class="barcode-image">
            {%- if label.barcode is not empty -%}
                <img alt="Barcode" src="data:image/png;base64,{{ label.barcode|barcode_128(256, 32) }}">
            {%- else -%}
                &nbsp;
            {%- endif -%}
        </p>
        <p class="references">
            <span>{{ label.barcode|default('&nbsp;')|raw }}</span>
            <span>{{ label.reference|default('&nbsp;')|raw }}</span>
        </p>
    </div>
{% endblock label %}
