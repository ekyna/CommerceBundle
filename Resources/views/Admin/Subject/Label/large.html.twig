{% extends '@EkynaCommerce/Admin/Subject/Label/base.html.twig' %}

{% block styles %}
    <style>
        @media print {
            html,
            body {
                margin: 0;
                padding: 0;
                text-rendering: optimizeLegibility;
                width: 100%;
                height: 100%;
            }

            .label {
                page-break-after: always;
                overflow: hidden;
                box-sizing: border-box;
                width: 100%;
                height: 100%;
            }
        }

        .label {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .label > p {
            flex: 1 1 initial;
            margin: 0;
            padding: 0;
            text-align: center;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .label > p {
            flex: 1 1 initial;
            margin: 0;
            padding: 0;
            text-align: center;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .label .barcode-image img {
            width: 100%;
            height: 100%;
        }

        .label-large > .designation {
            font-size: 18px;
        }

        .label-large > .reference,
        .label-large > .geocode {
            font-size: 28px;
        }

        .label-large > .extra {
            font-size: 14px;
        }
    </style>
{% endblock styles %}

{% block label %}
    <div class="label label-large">
        <p class="designation">{{ label.designation|default('&nbsp;')|raw }}</p>
        <p class="reference">{{ label.reference|default('&nbsp;')|raw }}</p>
        <p class="geocode">{{ label.geocode|default('&nbsp;')|raw }}</p>
        <p class="extra">{{ label.orderedAt|default('&nbsp;')|raw }}</p>
        <p class="barcode-image">
            {%- if label.barcode is not empty -%}
                <img alt="barcode" src="data:image/png;base64,{{ label.barcode|barcode_128(256, 60) }}">
            {%- else -%}
                &nbsp;
            {%- endif -%}
        </p>
        <p class="barcode-text">{{ label.barcode|default('&nbsp;')|raw }}</p>
    </div>
{% endblock label %}
