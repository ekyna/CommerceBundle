{% apply spaceless %}
<table class="table table-condensed table-alt-head">
    <thead>
    <tr>
        <th>{{ 'ekyna_core.field.designation'|trans }}</th>
        <th>{{ 'ekyna_core.field.reference'|trans }}</th>
        <th>{{ 'ekyna_core.field.quantity'|trans }}</th>
    </tr>
    </thead>
    {%- if lines is not empty -%}
    <tbody>
    {%- for line in lines -%}
        <tr>
            <td>{{ line.designation }}</td>
            <td>{{ line.reference }}</td>
            <td>{{ line.quantity|localizednumber }}{% if 0 < line.total %} / {{ line.total|localizednumber }}{% endif %}</td>{# TODO Packaging format #}
        </tr>
    {%- endfor -%}
    </tbody>
    {%- endif -%}
    {%- if items is not empty -%}
    <tbody>
    {% for item in items -%}
        <tr>
            <td>{{ item.designation }}</td>
            <td>{{ item.reference }}</td>
            <td>{{ item.quantity|localizednumber }}</td>
        </tr>
    {%- endfor %}
    </tbody>
    {%- endif -%}
</table>
{% if description %}
<div>
    <dl class="dl-horizontal">
    {% if description is not empty %}
        <dt>{{ 'ekyna_commerce.field.description'|trans }}</dt>
        <dd>{{ description|nl2br|raw }}</dd>
    {% endif %}
    </dl>
</div>
{% endif %}
{% endapply %}
