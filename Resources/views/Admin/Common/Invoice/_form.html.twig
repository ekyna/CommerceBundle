{% apply spaceless %}
<ul class="nav nav-tabs" data-tab-key="{{ context.config.id }}">
    <li class="active">
        <a href="#invoice-general" id="toggle-general" data-toggle="tab">
            {{- 'field.general'|trans({}, 'EkynaUi') -}}
        </a>
    </li>
    {#<li>
        <a href="#invoice-relay-point" id="toggle-relay-point" data-toggle="tab">
            {{- 'relay_point.label.singular'|trans({}, 'EkynaCommerce') -}}
        </a>
    </li>#}
    <li>
        <a href="#invoice-invoice-address" id="toggle-invoice-address" data-toggle="tab">
            {{- 'sale.field.invoice_address'|trans({}, 'EkynaCommerce') -}}
        </a>
    </li>
    <li>
        <a href="#invoice-delivery-address" id="toggle-delivery-address" data-toggle="tab">
            {{- 'sale.field.delivery_address'|trans({}, 'EkynaCommerce') -}}
        </a>
    </li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form, {'global_errors': true}) }}
    <div class="tab-content">
        <div class="tab-pane active" id="invoice-general">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.number, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.createdAt, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>

            {% if form.ignoreStock is defined %}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.ignoreStock, {'label_col': 4, 'widget_col': 8}) }}
                    </div>
                </div>
            {% endif %}

            {{ form_row(form.lines) }}

            {% if form.items is defined -%}
            {{ form_row(form.items) }}
            {%- endif %}

            {{ form_row(form.comment) }}
            {{ form_row(form.description) }}

            {% block extra_fields %}{% endblock extra_fields %}
        </div>
        <div class="tab-pane" id="invoice-invoice-address">
            {{ form_row(form.customInvoiceAddress) }}
        </div>
        <div class="tab-pane" id="invoice-delivery-address">
            {{ form_row(form.customDeliveryAddress) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ ivory_google_api() }}
</div>
{% endapply %}
