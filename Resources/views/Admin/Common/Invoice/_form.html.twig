<div class="form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form, {'global_errors': true}) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.number, {'label_col': 4, 'widget_col': 8}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.createdAt, {'label_col': 4, 'widget_col': 8}) }}
        </div>
    </div>

    {% if form.ignoreStock is defined %}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.ignoreStock, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
    {% endif %}

    {{ form_row(form.lines) }}

    {% if form.items is defined -%}
    {{ form_row(form.items) }}
    {%- endif %}

    {{ form_row(form.comment) }}
    {{ form_row(form.description) }}

    {{ form_rest(form) }}
</div>
