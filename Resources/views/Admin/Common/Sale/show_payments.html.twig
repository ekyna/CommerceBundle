{% spaceless %}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>{{ 'ekyna_core.field.number'|trans }}</th>
            <th>{{ 'ekyna_core.field.method'|trans }}</th>
            <th>{{ 'ekyna_core.field.amount'|trans }}</th>
            <th>{{ 'ekyna_core.field.currency'|trans }}</th>
            <th>{{ 'ekyna_core.field.status'|trans }}</th>
            <th>{{ 'ekyna_core.field.created_at'|trans }}</th>
            <th>{{ 'ekyna_core.field.description'|trans }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for payment in sale.payments %}
            {% set paymentId = 'payment_' ~ loop.index0 %}
            <tr data-id="{{ payment.id }}">
                <td id="{{ paymentId }}_number">{{ payment.getNumber() }}</td>
                <td id="{{ paymentId }}_method">{{ payment.getMethod() }}</td>
                <td id="{{ paymentId }}_amount">{{ payment.getAmount()|localizedcurrency(payment.getCurrency().code) }}</td>
                <td id="{{ paymentId }}_currency">{{ payment.getCurrency() }}</td>
                <td id="{{ paymentId }}_state">{{ payment|payment_state_badge }}</td>
                <td id="{{ paymentId }}_createdAt">{{ payment.getCreatedAt()|localizeddate('short', 'none') }}</td>
                <td id="{{ paymentId }}_description">{{ payment.getDescription() }}</td>
                <td class="actions">
                    {{ payment_admin_actions(payment) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">
                    <em>{{ 'ekyna_commerce.payment.alert.no_item'|trans }}</em>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endspaceless %}
