<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.number, 'text', 'ekyna_core.field.number', {
            'id': 'sale_number',
            'label_nb_col': 6,
            'widget_nb_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.voucherNumber, 'text', 'ekyna_commerce.sale.field.voucher_number', {
            'id': 'sale_voucherNumber',
            'label_nb_col': 6,
            'widget_nb_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale|sale_state_badge, 'text', 'ekyna_commerce.sale.field.state', {
            'id': 'sale_state',
            'label_nb_col': 4,
            'widget_nb_col': 8
        }) }}
    </div>
</div>
{% block customer %}
{% if sale.customer is not same as (null) %}
    {{ show_row(sale.customer|identity, 'entity', 'ekyna_commerce.customer.label.singular', {
        'id': 'sale_customer',
        'route': 'ekyna_commerce_customer_admin_show',
        'route_params': {'customerId': sale.customer.id}
    }) }}
{% else %}
    {{ show_row(null, 'text', 'ekyna_commerce.customer.label.singular', {
        'id': 'sale_customer'
    }) }}
{% endif %}
{% endblock customer %}
<div class="row">
    <div class="col-md-6">
        <div class="row show-row">
            <div class="col-md-4 show-label">
                {{ 'ekyna_core.field.identity'|trans }}
            </div>
            <div class="col-md-8">
                <div class="show-widget show-widget-inline" id="sale_identity">
                    {{ sale|identity }}
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        {{ show_row(sale.email, 'text', 'ekyna_core.field.email', {
            'id': 'sale_email',
            'label_nb_col': 4,
            'widget_nb_col': 8
        }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ show_row(sale.company, 'text', 'ekyna_core.field.company', {
            'id': 'sale_company',
            'label_nb_col': 4,
            'widget_nb_col': 8
        }) }}
    </div>
    <div class="col-md-6">
        {{ show_row(sale.customerGroup, 'entity', 'ekyna_commerce.customer_group.label.singular', {
            'id': 'sale_customerGroup',
            'route': 'ekyna_commerce_customer_group_admin_show',
            'route_params': {'customerGroupId': sale.customerGroup.id},
            'label_nb_col': 4,
            'widget_nb_col': 8
        }) }}
    </div>
</div>
{% include "EkynaCommerceBundle:Admin/Common/Pricing:_show_vat_fields.html.twig" with {'subject': sale, 'prefix': 'sale'} %}
