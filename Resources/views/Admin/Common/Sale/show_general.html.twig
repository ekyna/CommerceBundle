<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.number, 'text', 'ekyna_core.field.number', {
            'id': 'sale_number',
            'label_nb_col': 6,
            'widget_nb_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.voucherNumber, 'text', 'ekyna_commerce.sale.field.voucher_number', {
            'id': 'sale_voucherNumber',
            'label_nb_col': 6,
            'widget_nb_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale|sale_state_badge, 'text', 'ekyna_commerce.sale.field.state', {
            'id': 'sale_state',
            'label_nb_col': 4,
            'widget_nb_col': 8
        }) }}
    </div>
</div>
{% if attribute(sale, 'getInCharge') is defined %}
    <div class="row">
        <div class="col-md-6">
            {% if sale.customer is not null %}
                {{ show_row(sale.customer|identity, 'entity', 'ekyna_commerce.customer.label.singular', {
                    'id': 'sale_customer',
                    'route': 'ekyna_commerce_customer_admin_show',
                    'route_params': {'customerId': sale.customer.id},
                    'label_nb_col': 4,
                    'widget_nb_col': 8
                }) }}
            {% else %}
                {{ show_row(null, 'text', 'ekyna_commerce.customer.label.singular', {
                    'id': 'sale_customer',
                    'label_nb_col': 4,
                    'widget_nb_col': 8
                }) }}
            {% endif %}
        </div>
        <div class="col-md-6">
            {{ show_row(sale.inCharge, 'entity', 'ekyna_commerce.customer.field.in_charge', {
                'id': 'sale_user',
                'route': 'ekyna_user_user_admin_show',
                'route_params_map': {'userId': 'id'},
                'field': 'username',
                'label_nb_col': 4,
                'widget_nb_col': 8
            }) }}
        </div>
    </div>
{% else %}
    {% if sale.customer is not null %}
        {{ show_row(sale.customer|identity, 'entity', 'ekyna_commerce.customer.label.singular', {
            'id': 'sale_customer',
            'route': 'ekyna_commerce_customer_admin_show',
            'route_params': {'customerId': sale.customer.id}
        }) }}
    {% else %}
        {{ show_row(null, 'text', 'ekyna_commerce.customer.label.singular', {
            'id': 'sale_customer'
        }) }}
    {% endif %}
{% endif %}
