{% if sale.currency.code != commerce_default_currency -%}
<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.currency.code|currency_name|title, 'text', {
            'label': 'ekyna_commerce.currency.label.singular',
            'id': 'sale_currency',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.exchangeRate|localizednumber, 'text', {
            'label': 'ekyna_commerce.field.exchange_rate',
            'id': 'sale_exchange_rate',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.exchangeDate, 'datetime', {
            'label': 'ekyna_commerce.field.exchange_date',
            'id': 'sale_exchange_date',
            'label_col': 6
        }) }}
    </div>
</div>
{%- endif %}
<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.grandTotal|localizedcurrency(sale.currency.code), 'text', {
            'label': 'ekyna_commerce.sale.field.ati_total',
            'class': 'sale-grand-total',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.paidTotal|localizedcurrency(sale.currency.code), 'text', {
            'label': 'ekyna_commerce.sale.field.paid_total',
            'class': 'sale-paid-total',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.depositTotal|localizedcurrency(sale.currency.code), 'text', {
            'label': 'ekyna_commerce.sale.field.deposit_total',
            'class': 'sale-deposit-total',
            'label_col': 6
        }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.outstandingAccepted|localizedcurrency(sale.currency.code), 'text', {
            'label': 'ekyna_commerce.sale.field.outstanding_accepted',
            'id': 'sale_outstandingAccepted',
            'class': 'sale-outstanding-accepted',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.outstandingExpired|localizedcurrency(sale.currency.code), 'text', {
            'label': 'ekyna_commerce.sale.field.outstanding_expired',
            'id': 'sale_outstandingExpired',
            'class': 'sale-outstanding-expired',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.outstandingLimit|localizedcurrency(sale.currency.code), 'text', {
            'label': 'ekyna_commerce.sale.field.outstanding_limit',
            'id': 'sale_outstandingLimit',
            'class': 'sale-outstanding-limit',
            'label_col': 6
        }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.paymentState|payment_state_badge, 'text', {
            'label': 'ekyna_commerce.sale.field.payment_state',
            'class': 'sale-payment-state',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.paymentTerm, 'entity', {
            'label': 'ekyna_commerce.payment_term.label.singular',
            'id': 'sale_paymentTerm',
            'class': 'sale-payment-term',
            'route': 'ekyna_commerce_payment_term_admin_show',
            'route_parameters_map': {'paymentTermId': 'id'},
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.outstandingDate, 'datetime', {
            'label': 'ekyna_commerce.sale.field.outstanding_date',
            'id': 'sale_outstandingDate',
            'class': 'sale-outstanding-date',
            'time': false,
            'label_col': 6
        }) }}
    </div>
</div>
