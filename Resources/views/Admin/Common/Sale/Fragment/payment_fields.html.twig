<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.paymentState|payment_state_badge, 'text', {
            'label': 'sale.field.payment_state',
            'label_trans_domain': 'EkynaCommerce',
            'class': 'sale-payment-state',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.paymentMethod, 'resource', {
            'resource': 'ekyna_commerce.payment_method',
            'id': 'sale_paymentMethod',
            'class': 'sale-payment-method',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.depositTotal, 'commerce_amount', {
            'label': 'sale.field.deposit_total',
            'class': 'sale-deposit-total',
            'subject': sale,
            'label_col': 6
        }) }}
    </div>
</div>
{% if sale.currency.code != commerce_default_currency -%}
<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.currency.code|currency_name|title, 'text', {
            'label': 'currency.label.singular',
            'label_trans_domain': 'EkynaCommerce',
            'id': 'sale_currency',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale|currency_rate, 'text', {
            'label': 'field.exchange_rate',
            'label_trans_domain': 'EkynaCommerce',
            'id': 'sale_exchange_rate',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.exchangeDate, 'datetime', {
            'label': 'field.exchange_date',
            'label_trans_domain': 'EkynaCommerce',
            'id': 'sale_exchange_date',
            'label_col': 6
        }) }}
    </div>
</div>
{%- endif %}
<div class="row">
    <div class="col-md-4">
        {% if sale is sale_with_invoice -%}
            {{ show_row(sale.invoiceTotal, 'commerce_amount', {
                'label': 'sale.field.invoice_total',
                'class': 'sale-invoice-total',
                'subject': sale,
                'label_col': 6
            }) }}
        {%- else -%}
            {{ show_row(sale.grandTotal, 'commerce_amount', {
                'label': 'sale.field.ati_total',
                'class': 'sale-grand-total',
                'subject': sale,
                'label_col': 6
            }) }}
        {%- endif %}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.paidTotal, 'commerce_amount', {
            'label': 'sale.field.paid_total',
            'class': 'sale-paid-total',
            'subject': sale,
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.refundedTotal, 'commerce_amount', {
            'label': 'sale.field.refunded_total',
            'class': 'sale-paid-total',
            'subject': sale,
            'label_col': 6
        }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.outstandingAccepted, 'commerce_amount', {
            'label': 'sale.field.outstanding_accepted',
            'id': 'sale_outstandingAccepted',
            'class': 'sale-outstanding-accepted',
            'subject': sale,
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.outstandingExpired, 'commerce_amount', {
            'label': 'sale.field.outstanding_expired',
            'id': 'sale_outstandingExpired',
            'class': 'sale-outstanding-expired',
            'subject': sale,
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.outstandingLimit, 'commerce_amount', {
            'label': 'sale.field.outstanding_limit',
            'id': 'sale_outstandingLimit',
            'class': 'sale-outstanding-limit',
            'subject': sale,
            'label_col': 6
        }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {{ show_row(sale.paymentTerm, 'resource', {
            'resource': 'ekyna_commerce.payment_term',
            'id': 'sale_paymentTerm',
            'class': 'sale-payment-term',
            'label_col': 6
        }) }}
    </div>
    <div class="col-md-4">
        {{ show_row(sale.outstandingDate, 'datetime', {
            'label': 'sale.field.outstanding_date',
            'label_trans_domain': 'EkynaCommerce',
            'id': 'sale_outstandingDate',
            'class': 'sale-outstanding-date',
            'time': false,
            'label_col': 6
        }) }}
    </div>
</div>
