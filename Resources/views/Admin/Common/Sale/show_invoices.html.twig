{% spaceless %}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>{{ 'ekyna_core.field.number'|trans }}</th>
            <th>{{ 'ekyna_core.field.type'|trans }}</th>
            {% if prefix == 'credit' -%}
                <th>{{ 'ekyna_core.field.mode'|trans }}</th>
            {%- endif %}
            <th>{{ 'ekyna_commerce.invoice.field.goods_base'|trans }}</th>
            <th>{{ 'ekyna_commerce.invoice.field.shipment_base'|trans }}</th>
            <th>{{ 'ekyna_commerce.field.taxes_total'|trans }}</th>
            <th>{{ 'ekyna_commerce.sale.field.ati_total'|trans }}</th>
            <th>{{ 'ekyna_core.field.created_at'|trans }}</th>
            <th>{{ 'ekyna_commerce.shipment.label.singular'|trans }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% if 0 < invoices|length %}
            {% set goodsTotal = 0 %}
            {% set shipmentTotal = 0 %}
            {% set taxesTotal = 0 %}
            {% set total = 0 %}

            {% for invoice in invoices %}
                {% set currency = invoice.currency %}

                {# TODO currency conversion ! #}
                {#{% set goodsTotal = goodsTotal + invoice.goodsBase %}
                {% set shipmentTotal = shipmentTotal + invoice.shipmentBase %}
                {% set taxesTotal = taxesTotal + invoice.taxesTotal %}
                {% set total = total + invoice.grandTotal %}#}

                {% set invoiceId = prefix ~ '_' ~ loop.index0 %}
            <tr data-id="{{ invoice.id }}" data-summary='{{ {
                'route': 'ekyna_commerce_order_invoice_admin_summary',
                'parameters': {
                    'orderId':  invoice.sale.id,
                    'orderInvoiceId': invoice.id
                }
            }|json_encode }}'>
                <td id="{{ invoiceId }}_number">{{ invoice.number }}</td>
                <td id="{{ invoiceId }}_type">{{ invoice|invoice_type_badge }}</td>
                {% if prefix == 'credit' -%}
                <td id="{{ invoiceId }}_mode">
                    {%- if invoice.paymentMethod is null -%}
                        {{ 'ekyna_core.value.none'|trans }}
                    {%- else -%}
                        {{ invoice.paymentMethod.title }}
                    {%- endif -%}
                </td>
                {%- endif %}
                <td id="{{ invoiceId }}_goodsBase">{{ invoice.goodsBase|localizedcurrency(currency) }}</td>
                <td id="{{ invoiceId }}_shipmentBase">{{ invoice.shipmentBase|localizedcurrency(currency) }}</td>
                <td id="{{ invoiceId }}_taxesTotal">{{ invoice.taxesTotal|localizedcurrency(currency) }}</td>
                <td id="{{ invoiceId }}_grandTotal">{{ invoice.grandTotal|localizedcurrency(currency) }}</td>
                <td id="{{ invoiceId }}_createdAt">{{ invoice.createdAt|localizeddate('short', 'short') }}</td>
                <td id="{{ invoiceId }}_shipment">
                    {%- if invoice.shipment is not null %}
                        {{ invoice.shipment.number }}
                        <a href="{{ admin_resource_path(invoice, 'unlink') }}"
                           id="{{ invoiceId }}_recalculate"
                           class="btn btn-link btn-xs"
                           title="{{ 'ekyna_commerce.invoice.button.unlink'|trans }}"
                           onclick="return confirm('{{ 'ekyna_commerce.invoice.message.unlink_confirm'|trans({
                               '%number%': invoice.shipment.number
                           }) }}');">
                            <span class="fa fa-unlink"></span>
                        </a>
                    {% endif -%}
                </td>
                <td class="actions">
                    <a href="{{ admin_resource_path(invoice, 'render') }}"
                       id="{{ invoiceId }}_render"
                       class="btn btn-primary btn-xs"
                       title="{{ 'ekyna_core.button.download'|trans }}"
                       target="_blank">
                        <span class="fa fa-download"></span>
                    </a>
                    <a href="{{ admin_resource_path(invoice, 'recalculate') }}"
                       id="{{ invoiceId }}_recalculate"
                       class="btn btn-warning btn-xs"
                       title="{{ 'ekyna_commerce.invoice.button.recalculate'|trans }}"
                       onclick="return confirm('{{ 'ekyna_commerce.invoice.message.recalculate_confirm'|trans }}');">
                        <span class="fa fa-refresh"></span>
                    </a>
                    {% if invoice.shipment is null -%}
                    <a href="{{ admin_resource_path(invoice, 'edit') }}"
                       id="{{ invoiceId }}_edit"
                       class="btn btn-warning btn-xs"
                       title="{{ 'ekyna_core.button.edit'|trans }}">
                        <span class="fa fa-pencil"></span>
                    </a>
                    {%- endif %}
                    <a href="{{ admin_resource_path(invoice, 'remove') }}"
                       id="{{ invoiceId }}_remove"
                       class="btn btn-danger btn-xs"
                       title="{{ 'ekyna_core.button.remove'|trans }}">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
            {% endfor %}
            {#<tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                {% if prefix == 'credit' %}<td>&nbsp;</td>{% endif %}
                <td>{{ goodsTotal|localizedcurrency(currency) }}</td>
                <td>{{ shipmentTotal|localizedcurrency(currency) }}</td>
                <td>{{ taxesTotal|localizedcurrency(currency) }}</td>
                <td>{{ total|localizedcurrency(currency) }}</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>#}
        {% else %}
            <tr>
                <td colspan="{{ prefix == 'credit' ? 10 : 9 }}" class="text-center">
                    <em>{{ 'ekyna_commerce.invoice.alert.no_item'|trans }}</em>
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>
{% endspaceless %}
