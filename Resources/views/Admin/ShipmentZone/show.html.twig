{% extends '@EkynaAdmin/Entity/Default/show.html.twig' %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(shipmentZone, 'edit') }}
        {{ admin_resource_btn(shipmentZone, 'remove') }}
    </div>
    <div class="show show-with-tabs">
        <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
            <li class="active">
                <a href="#shipment-shipment-zone-general" id="toggle-general" data-toggle="tab">
                    {{- 'ekyna_core.field.general'|trans -}}
                </a>
            </li>
        </ul>
        <div class="show-body">
            <div class="tab-content">
                <div class="tab-pane active" id="shipment-shipment-zone-general">
                    {{ show_row(shipmentZone.name, 'text', {
                        'label': 'ekyna_core.field.name',
                        'id': 'shipment_zone_name'
                    }) }}
                    {{ show_row(shipmentZone.countries, 'entity', {
                        'label': 'ekyna_commerce.country.label.plural',
                        'id': 'shipment_zone_countries'
                    }) }}
                    {{ display_shipment_prices(shipmentZone) }}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">require(['bundles/ekynacommerce/js/show/shipment-prices']);</script>
{% endblock javascripts %}
