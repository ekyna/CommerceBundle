{% extends '@EkynaAdmin/Entity/Default/show.html.twig' %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(country, 'edit') }}
    {{ admin_resource_btn(country, 'remove') }}
</div>
<div class="show show-with-tabs" data-tab-key="{{ resource_id }}">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#country-general" id="toggle-general" data-toggle="tab">
                {{ 'ekyna_core.field.general'|trans }}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="country-general">
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(country.name, 'text', {
                            'label': 'ekyna_core.field.name',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(country.code, 'text', {
                            'label': 'ekyna_core.field.code',
                            'label_col': 4
                        }) }}
                    </div>
                </div>
                {{ show_row(country.enabled, 'boolean', {
                    'label': 'ekyna_core.field.enabled'
                }) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
