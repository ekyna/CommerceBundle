{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(currency, 'edit') }}
    {{ admin_resource_btn(currency, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#currency-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="currency-general">
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(currency.name, 'text', 'ekyna_core.field.name', {'label_nb_col': 4, 'widget_nb_col': 8}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(currency.code, 'text', 'ekyna_core.field.code', {'label_nb_col': 4, 'widget_nb_col': 8}) }}
                    </div>
                </div>
                {{ show_row(currency.enabled, 'checkbox', 'ekyna_core.field.enabled') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
