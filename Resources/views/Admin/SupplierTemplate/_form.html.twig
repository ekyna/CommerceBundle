{% apply spaceless %}
<ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
    <li class="active">
        <a href="#supplier-template-general" id="toggle-general" data-toggle="tab">
            {{ 'ekyna_core.field.general'|trans }}
        </a>
    </li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form, {'global_errors': true}) }}
    <div class="tab-content">
        <div class="tab-pane active" id="supplier-template-general">
            {{ form_row(form.title) }}
            {{ form_row(form.translations, {'label_col': 0, 'widget_col': 12}) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>
{% endapply %}
