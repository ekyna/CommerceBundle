{% extends '@EkynaAdmin/Entity/Crud/update.html.twig' %}

{% set resource = context.resource %}

{% block title %}
    <h1>{{ (context.config.transPrefix ~ '.header.test')|trans({'%name%': resource|trans({}, 'EkynaCommerce')}, context.config.transDomain)|raw }}</h1>
{% endblock title %}

{% block main %}
    {{ form_start(form) }}
    <div class="form-body">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ bootstrap_set_label_col(3) }}
        {{ bootstrap_set_widget_col(9) }}
        {{ form_widget(form) }}
    </div>
    {{ form_end(form) }}
{% endblock main %}
