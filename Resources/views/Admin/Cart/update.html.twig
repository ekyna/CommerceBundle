{% extends '@EkynaAdmin/Entity/Crud/update.html.twig' %}

{% block side %}
    {{ parent() }}
    {% include '@EkynaCommerce/Admin/Common/Sale/Side/sale.html.twig' with {
        'title': t('order.label.singular', [], 'EkynaCommerce'),
        'sale': resource
    } %}
