{% extends '@EkynaAdmin/Entity/Crud/_form_default.html.twig' %}

{% block main_contents -%}
    <div class="tab-pane active" id="{{ resource_name }}-general">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.vatMode, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
        {{ form_row(form.methods) }}
        {{ form_row(form.countries) }}
        {{ form_row(form.customerGroups) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.startAt, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.endAt, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.baseTotal, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.netPrice, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
    </div>
{%- endblock main_contents %}
