{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(attributeGroup, 'edit') }}
    {{ admin_resource_btn(attributeGroup, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="general">
                {{ show_row(attributeGroup.name, 'text', 'ekyna_core.field.email') }}
            </div>
        </div>
    </div>
</div>
<div class="sub-header">
    <h2>{{ 'ekyna_commerce.attribute.header.list'|trans|raw }}</h2>
</div>
<div class="actions">
    {{ admin_resource_btn('ekyna_commerce.attribute', 'new', {
        'path': path('ekyna_commerce_attribute_admin_new', {'attributeGroupId': attributeGroup.id})
    }) }}
</div>
{{ ekyna_table_render(attributes) }}
{% endblock %}
