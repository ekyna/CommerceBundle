<ul class="nav nav-tabs">
    <li class="active">
        <a href="#customer-group-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
    </li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form) }}
    <div class="tab-content">
        <div class="tab-pane active" id="customer-group-general">
            {{ form_row(form.name) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.business, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.registration, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
            {{ form_row(form.default) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>
