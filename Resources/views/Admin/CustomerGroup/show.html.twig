{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(customerGroup, 'edit') }}
    {{ admin_resource_btn(customerGroup, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        <li class="active">
            <a href="#customer-group-general" id="toggle-general" data-toggle="tab">
                {{- 'ekyna_core.field.general'|trans -}}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="customer-group-general">
                {{ show_row(customerGroup.name, 'text', 'ekyna_core.field.name', {
                    'id': 'customerGroup_name'
                }) }}
                {{ show_translations_row(customerGroup.translations, {
                    'id': 'customerGroup_translations',
                    'fields': {
                        'title': {'label': 'ekyna_core.field.title'}
                    }
                }) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(customerGroup.default, 'checkbox', 'ekyna_core.field.default', {
                            'id': 'customerGroup_default',
                            'label_nb_col': 4,
                            'widget_nb_col': 8
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(customerGroup.business, 'checkbox', 'ekyna_commerce.customer_group.field.business', {
                            'id': 'customerGroup_business',
                            'label_nb_col': 4,
                            'widget_nb_col': 8
                        }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(customerGroup.registration, 'checkbox', 'ekyna_commerce.customer_group.field.registration', {
                            'id': 'customerGroup_registration',
                            'label_nb_col': 4,
                            'widget_nb_col': 8
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(customerGroup.quoteAllowed, 'checkbox', 'ekyna_commerce.customer_group.field.quote_allowed', {
                            'id': 'customerGroup_registration',
                            'label_nb_col': 4,
                            'widget_nb_col': 8
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
