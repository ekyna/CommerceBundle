{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(customerGroup, 'edit') }}
    {{ admin_resource_btn(customerGroup, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#customer-group-general" data-toggle="tab">
                {{- 'ekyna_core.field.general'|trans -}}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="customer-group-general">
                {{ show_row(customerGroup.name, 'text', 'ekyna_core.field.name', {
                    'id': 'customer_group_name'
                }) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(customerGroup.business, 'checkbox', 'ekyna_commerce.customer_group.field.business', {
                            'id': 'customer_group_business',
                            'label_nb_col': 4,
                            'widget_nb_col': 8
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(customerGroup.registration, 'checkbox', 'ekyna_commerce.customer_group.field.registration', {
                            'id': 'customer_group_registration',
                            'label_nb_col': 4,
                            'widget_nb_col': 8
                        }) }}
                    </div>
                </div>
                {{ show_row(customerGroup.default, 'checkbox', 'ekyna_core.field.default', {
                    'id': 'customer_group_default'
                }) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
