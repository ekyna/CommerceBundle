{% extends '@EkynaAdmin/Entity/Default/show.html.twig' %}

{% block actions %}{% endblock %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(warehouse, 'edit') }}
        {{ admin_resource_btn(warehouse, 'remove') }}
    </div>
    <div class="show show-with-tabs" data-tab-key="{{ resource_id }}">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#warehouse-general" id="toggle-general" data-toggle="tab">
                    {{- 'ekyna_core.field.general'|trans -}}
                </a>
            </li>
            <li>
                <a href="#warehouse-address" id="toggle-address" data-toggle="tab">
                    {{- 'ekyna_core.field.address'|trans -}}
                </a>
            </li>
        </ul>
        <div class="show-body">
            <div class="tab-content">
                <div class="tab-pane active" id="warehouse-general">
                    {{- show_row(warehouse.name, 'text', {
                        'label': 'ekyna_core.field.name'
                    }) -}}
                    {{- show_row(warehouse.countries, 'entity', {
                        'label': 'ekyna_commerce.country.label.plural',
                        'route': 'ekyna_commerce_country_admin_show',
                        'route_parameters_map': {'countryId': 'id'}
                    }) -}}
                    <div class="row">
                        <div class="col-md-4">
                            {{- show_row(warehouse.office, 'boolean', {
                                'label': 'ekyna_commerce.warehouse.field.office',
                                'label_col': 6,
                                'color': true
                            }) -}}
                        </div>
                        <div class="col-md-4">
                            {{- show_row(warehouse.default, 'boolean', {
                                'label': 'ekyna_core.field.default',
                                'label_col': 6,
                                'color': true
                            }) -}}
                        </div>
                        <div class="col-md-4">
                            {{- show_row(warehouse.priority, 'number', {
                                'label': 'ekyna_core.field.priority',
                                'label_col': 6
                            }) -}}
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="warehouse-address">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row show-row">
                                <div class="col-md-4 show-label">
                                    {{ 'ekyna_core.field.address'|trans }}
                                </div>
                                <div class="col-md-8">
                                    <div class="panel panel-default">
                                        <div class="panel-body" id="warehouse_address">
                                            {{- warehouse|address -}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            {{- show_row(warehouse, 'google_map', {
                                'label': null,
                                'map_width': 520,
                                'map_height': 160,
                                'map_zoom': 15,
                                'map_static': false
                            }) -}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ ivory_google_api() }}
{% endblock %}
