{% apply spaceless %}
<table class="table table-condensed table-alt-head">
<thead>
    <tr>
        <th>{{ 'field.designation'|trans({}, 'EkynaUi') }}</th>
        <th>{{ 'field.reference'|trans({}, 'EkynaUi') }}</th>
        <th>{{ 'field.buy_net_price'|trans({}, 'EkynaCommerce') }}</th>
        <th>{{ 'stock_unit.field.ordered_quantity'|trans({}, 'EkynaCommerce') }}</th>
        <th>{{ 'stock_unit.field.received_quantity'|trans({}, 'EkynaCommerce') }}</th>
    </tr>
</thead>
<tbody>
{% for item in items %}
    <tr>
        <td>{{ item.designation }}</td>
        <td>{{ item.reference }}</td>
        <td>{{ item.net_price }}</td>
        <td>{{ item.ordered }}</td>
        <td>{{ item.received }}</td>
    </tr>
{% endfor %}
</tbody>
</table>
{% if description  %}
<div>
    <dl class="dl-horizontal">
        {% if description is not empty %}
            <dt>{{ 'field.description'|trans({}, 'EkynaCommerce') }}</dt>
            <dd>{{ description|nl2br|raw }}</dd>
        {% endif %}
    </dl>
</div>
{% endif %}
{% endapply %}
