{% spaceless %}
<ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
    <li class="active">
        <a href="#order-general" id="toggle-general" data-toggle="tab">
            {{ 'ekyna_core.field.general'|trans }}
        </a>
    </li>
    <li>
        <a href="#order-addresses" id="toggle-addresses" data-toggle="tab">
            {{ 'ekyna_commerce.sale.field.addresses'|trans }}
        </a>
    </li>
    <li>
        <a href="#order-informations" id="toggle-informations" data-toggle="tab">
            {{ 'ekyna_core.field.informations'|trans }}
        </a>
    </li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form) }}
    <div class="tab-content">
        <div class="tab-pane active" id="order-general">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.number, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.currency, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.customer, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.inCharge, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <p><em>{{ 'ekyna_commerce.sale.message.provide_customer_or_data'|trans }}</em></p>
                </div>
            </div>
            {{ form_row(form.identity) }}
            {{ form_row(form.email) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.company, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.customerGroup, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.vatNumber, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.vatValid, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.preferredShipmentMethod, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.paymentTerm, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
            {{ form_row(form.tags) }}
        </div>
        <div class="tab-pane" id="order-addresses">
            {{ form_row(form.invoiceAddress) }}
            <hr>
            {{ form_row(form.deliveryAddress) }}
        </div>
        <div class="tab-pane" id="order-informations">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.voucherNumber, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.originNumber, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
            {{ form_row(form.comment) }}
            {{ form_row(form.description) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>
{% endspaceless %}
