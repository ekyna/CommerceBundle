{% apply spaceless %}
<div class="row">
    <div class="col-md-4">
        <div class="commerce-export">
            <div class="commerce-panel">
                <h3>{{ 'ekyna_commerce.dashboard.export.title'|trans }}</h3>
                {{ form_start(accounting_form) }}
                <table style="width:100%">
                    <tr>
                        <td style="width:20%">{{ 'ekyna_commerce.accounting.label.plural'|trans }}</td>
                        <td>{{ form_widget(accounting_form.year) }}</td>
                        <td>{{ form_widget(accounting_form.month) }}</td>
                        <td>{{ form_widget(accounting_form.submit) }}</td>
                    </tr>
                </table>
                {{ form_end(accounting_form) }}
                {{ form_start(costs_form) }}
                <table style="width:100%">
                    <tr>
                        <td style="width:20%">Co√ªts</td>
                        <td>{{ form_widget(costs_form.year) }}</td>
                        <td>{{ form_widget(costs_form.month) }}</td>
                        <td>{{ form_widget(costs_form.submit) }}</td>
                    </tr>
                </table>
                {{ form_end(costs_form) }}
                <hr>
                <p>
                    <a href="{{ path('ekyna_commerce_export_admin_due_orders') }}"
                       class="btn btn-sm btn-default">
                        <span class="glyphicon glyphicon-download"></span>
                        {{- 'ekyna_commerce.dashboard.export.due_orders'|trans -}}
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endapply %}
