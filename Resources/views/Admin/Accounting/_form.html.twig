{% extends '@EkynaAdmin/Entity/Crud/_form_default.html.twig' %}

{% block main_contents -%}
    <div class="tab-pane active" id="{{ resource_name }}-general">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.number, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.enabled, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
        {{ form_row(form.type) }}
        {{ form_row(form.taxRule) }}
        {{ form_row(form.tax) }}
        {{ form_row(form.paymentMethod) }}
        {{ form_row(form.customerGroups) }}
    </div>
{%- endblock main_contents %}
