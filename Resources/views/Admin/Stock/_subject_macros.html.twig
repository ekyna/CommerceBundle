{% macro show_stock_view(subject, prefix) %}
{% spaceless %}
    {% set prefix = prefix|default('subject') %}
    <div class="row">
        <div class="col-md-4">
            {{ _self.show_stock_mode(subject, {
                'id': prefix ~'_stockMode',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_stock_state(subject, {
                'id': prefix ~'_stockState',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_geocode(subject, {
                'id': prefix ~'_geocode',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ _self.show_in_stock(subject, {
                'id': prefix ~'_inStock',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_available_stock(subject, {
                'id': prefix ~'_availableStock',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_virtual_stock(subject, {
                'id': prefix ~'_virtualStock',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ _self.show_stock_floor(subject, {
                'id': prefix ~'_stockFloor',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_replenishment_time(subject, {
                'id': prefix ~'_replenishmentTime',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_eda(subject, {
                'id': prefix ~'_estimatedDateOfArrival',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ _self.show_minimum_order_quantity(subject, {
                'id': prefix ~'_minimumOrderQuantity',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_quote_only(subject, {
                'id': prefix ~'_quoteOnly',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
        <div class="col-md-4">
            {{ _self.show_end_of_life(subject, {
                'id': prefix ~'_endOfLife',
                'label_nb_col': 6,
                'widget_nb_col': 6
            }) }}
        </div>
    </div>
{% endspaceless %}
{% endmacro show_stock_view %}

