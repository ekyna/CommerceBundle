{% extends '@EkynaAdmin/Entity/Crud/_form_default.html.twig' %}

{% block main_contents -%}
    <div class="tab-pane active" id="{{ resource_name }}-general">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.priority, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.customer, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.business, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
        {{ form_row(form.sources) }}
        {{ form_row(form.targets) }}
        {{ form_row(form.taxes) }}
        {{ form_row(form.mentions) }}
    </div>
{%- endblock main_contents %}
