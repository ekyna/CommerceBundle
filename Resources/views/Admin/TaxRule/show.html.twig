{% extends '@EkynaAdmin/Entity/Default/show.html.twig' %}

{% import '@EkynaCommerce/Admin/macros.html.twig' as _commerce %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(taxRule, 'edit') }}
    {{ admin_resource_btn(taxRule, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        <li class="active">
            <a href="#tax-rule-general" id="toggle-general" data-toggle="tab">
                {{ 'ekyna_core.field.general'|trans }}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="tax-rule-general">
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(taxRule.name, 'text', {
                            'label': 'ekyna_core.field.name',
                            'id': 'tax_rule_name',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(taxRule.priority, 'number', {
                            'label': 'ekyna_core.field.priority',
                            'id': 'tax_rule_priority',
                            'label_col': 4
                        }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(taxRule.customer, 'boolean', {
                            'label': 'ekyna_commerce.tax_rule.field.customer',
                            'id': 'tax_rule_customer',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(taxRule.business, 'boolean', {
                            'label': 'ekyna_commerce.tax_rule.field.business',
                            'id': 'tax_rule_business',
                            'label_col': 4
                        }) }}
                    </div>
                </div>
                {{ show_row(taxRule.sources, 'entity', {
                    'label': 'ekyna_commerce.tax_rule.field.sources',
                    'id': 'tax_rule_sources',
                    'route': 'ekyna_commerce_country_admin_show',
                    'route_parameters_map': {'countryId': 'id'}
                }) }}
                {{ show_row(taxRule.targets, 'entity', {
                    'label': 'ekyna_commerce.tax_rule.field.targets',
                    'id': 'tax_rule_targets',
                    'route': 'ekyna_commerce_country_admin_show',
                    'route_parameters_map': {'countryId': 'id'}
                }) }}
                {{ show_row(taxRule.taxes, 'entity', {
                    'label': 'ekyna_commerce.tax.label.plural',
                    'id': 'tax_rule_taxes',
                    'route': 'ekyna_commerce_tax_admin_show',
                    'route_parameters_map': {'taxId': 'id'}
                }) }}
                {{ _commerce.show_mentions(taxRule) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
