{% extends '@EkynaAdmin/Entity/Default/show.html.twig' %}


{% block actions %}
    {{ admin_resource_btn(resource, 'list') }}
{% endblock %}


{% block main %}
{% apply spaceless %}
<div class="actions">
    {{ admin_resource_btn(audience, 'edit') }}
    {{ admin_resource_btn(audience, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        <li class="active">
            <a href="#audience-general" data-toggle="tab">
                {{ 'ekyna_core.field.general'|trans }}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="audience-general">
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(audience.gateway|title, 'text', {
                            'label': 'ekyna_commerce.field.factory_name',
                            'id': 'audience_gateway',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(audience.name, 'text', {
                            'label': 'ekyna_core.field.name',
                            'id': 'audience_name',
                            'label_col': 4
                        }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(audience.public, 'boolean', {
                            'label': 'ekyna_commerce.audience.field.public',
                            'id': 'audience_public',
                            'color': true,
                            'false_class': 'label:labe-default',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(audience.default, 'boolean', {
                            'label': 'ekyna_core.field.default',
                            'id': 'audience_default',
                            'color': true,
                            'false_class': 'label:labe-default',
                            'label_col': 4
                        }) }}
                    </div>
                </div>
                {{ show_row(paymentTerm.translations, 'translations', {
                    'id': 'audience_translations',
                    'fields': {
                        'title': {'label': 'ekyna_core.field.title'},
                        'description': {
                            'label': 'ekyna_core.field.description',
                            'type': 'textarea'
                        }
                    }
                }) }}
            </div>
        </div>
    </div>
</div>
{% endapply %}
{% endblock %}
