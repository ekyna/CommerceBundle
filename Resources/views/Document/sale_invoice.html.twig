{% extends "EkynaCommerceBundle:Document:base.html.twig" %}

{% import "EkynaCommerceBundle:Document:macros.html.twig" as macro -%}

{%- block title -%}
    {{- ('ekyna_commerce.' ~ invoice.type ~ '.label.singular')|trans }}
    {{ invoice.number -}}
{%- endblock title -%}


{% set currency = invoice.currency %}


{# --- TITLE --- #}
{% block doc_title -%}
    <h1>
        {{- ('ekyna_commerce.' ~ invoice.type ~ '.label.singular')|trans }}
        {{ invoice.number -}}
    </h1>
    <p>Le {{ invoice.createdAt|localizeddate('long', 'none') }}.</p>
{%- endblock doc_title %}


{# --- ADDRESSES --- #}
{%- block doc_customer -%}
    {{ macro.render_customer(invoice.customer) }}
{%- endblock doc_customer -%}

{%- block doc_invoice_address -%}
    {{ macro.render_address(invoice.invoiceAddress) }}
{%- endblock doc_invoice_address -%}

{%- block doc_delivery_address -%}
{% if invoice.deliveryAddress is not empty %}
    {{ macro.render_address(invoice.deliveryAddress) }}
{% else %}
    {{ macro.render_address(invoice.invoiceAddress) }}
{% endif %}
{%- endblock doc_delivery_address -%}


{# --- LINES --- #}
{% block doc_lines %}
<table class="bloc table details">
    <thead>
    <tr>
        <th>{{ 'ekyna_core.field.designation'|trans }}</th>
        <th>{{ 'ekyna_core.field.reference'|trans }}</th>
        <th>{{ 'ekyna_commerce.sale.field.net_unit'|trans }}</th>
        <th>{{ 'ekyna_commerce.sale.field.tax_rate'|trans }}</th>
        <th>{{ 'ekyna_core.field.quantity'|trans }}</th>
        <th>{{ 'ekyna_commerce.sale.field.discount_total'|trans }}</th>
        <th>{{ 'ekyna_commerce.sale.field.net_total'|trans }}</th>
    </tr>
    </thead>

    {# GOODS #}
    <tbody class="stripped">
    {% for line in invoice.linesByType('good') %}
        <tr>
            <td>
                {{- line.designation -}}
                {%- if line.description is not empty -%}
                    <br><p class="description">{{ line.description|nl2br }}</p>
                {%- endif -%}
            </td>
            <td>{{ line.reference }}</td>
            <td class="text-right">{{ line.netPrice|localizedcurrency(currency) }}</td>
            <td class="text-right">
                {%- for rate in line.taxRates -%}
                    {{- rate|localizednumber }}%
                    {%- if not loop.last %}, {% endif -%}
                {%- else -%}
                    &nbsp;
                {%- endfor -%}
            </td>
            <td class="text-right">{{ line.quantity|localizednumber }}</td>
            <td class="text-right">
                {%- if line.discountTotal -%}
                    {{- line.discountTotal|localizedcurrency(currency) -}}
                {%- else -%}
                    &nbsp;
                {%- endif -%}
            </td>
            <td class="text-right">{{ line.netTotal|localizedcurrency(currency) }}</td>
        </tr>
    {% endfor %}
    </tbody>


    {# DISCOUNTS #}
    {% set discounts = invoice.linesByType('discount') %}
    {% if discounts is not empty %}
    {% block spacer %}
    <tbody class="spacer">
        <tr>
            <td colspan="7">&nbsp;</td>
        </tr>
    </tbody>
    {% endblock spacer %}

    <tbody>
    {% for line in discounts %}
        <tr>
            <td colspan="6">{{ line.designation }}</td>
            <td class="text-right">{{ line.netTotal|localizedcurrency(currency) }}</td>
        </tr>
    {% endfor %}
    </tbody>
    {% endif %}

    {# SHIPMENT #}
    {% set shipments = invoice.linesByType('shipment') %}
    {% if shipments is not empty %}
    {{ block('spacer') }}
    <tbody>
    {% for line in shipments %}
        <tr>
            <td colspan="6">{{ line.designation }}</td>
            <td class="text-right">{{ line.netTotal|localizedcurrency(currency) }}</td>
        </tr>
    {% endfor %}
    </tbody>
    {% endif %}

    {# TOTALS #}
    {{ block('spacer') }}
    <tbody class="totals">
    <tr>
        <td colspan="5" rowspan="3">&nbsp;</td>
        <th>{{ 'ekyna_commerce.sale.field.net_total'|trans }}</th>
        <td class="total text-right">{{ (invoice.goodsBase + invoice.shipmentBase)|localizedcurrency(currency) }}</td>
    </tr>
    <tr>
        <th>{{ 'ekyna_commerce.sale.field.tax_total'|trans }}</th>
        <td class="total text-right">{{ invoice.taxesTotal|localizedcurrency(currency) }}</td>
    </tr>
    <tr>
        <th>{{ 'ekyna_commerce.sale.field.grand_total'|trans }}</th>
        <td class="total final text-right">{{ invoice.grandTotal|localizedcurrency(currency) }}</td>
    </tr>
    </tbody>
</table>

{# Taxes details #}
{% if invoice.taxesDetails is not empty %}
<table class="table taxes">
    <thead>
        <tr>
            <th>{{ 'ekyna_commerce.tax.label.singular' }}</th>
            <th>{{ 'ekyna_commerce.sale.field.tax_total'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {%- for details in invoice.taxesDetails -%}
        <tr>
            <th>{{ details.name }}</th>
            <td class="text-right">{{ details.amount|localizedcurrency(currency) }}</td>
        </tr>
        {%- endfor -%}
    </tbody>
</table>
{% endif %}
{% endblock doc_lines %}


