{% spaceless %}
<?xml version="1.0" encoding="utf-8"?>
<repsonse>
    <fields>
        <granTotal>
            <![CDATA[{{ sale.grandTotal|localizedcurrency(sale.currency.code) }}]]>
        </granTotal>
        <paidTotal>
            <![CDATA[{{ sale.paidTotal|localizedcurrency(sale.currency.code) }}]]>
        </paidTotal>
        <weightTotal>
            <![CDATA[{{ sale.weightTotal|localizednumber }}]]>
        </weightTotal>
        <state>
            <![CDATA[{{ sale|sale_state_badge }}]]>
        </state>
        <paymentState>
            <![CDATA[{{ sale.paymentState|payment_state_badge }}]]>
        </paymentState>
        {% if with_shipment %}<shipmentState>
            <![CDATA[{{ sale.shipmentState|shipment_state_badge }}]]>
        </shipmentState>{% endif %}
    </fields>
    <view>
        <![CDATA[{{ render_sale_view(sale_view) }}]]>
    </view>
</repsonse>
{% endspaceless %}
