{% spaceless %}
{% import _self as macros %}
{% macro item_line(item) %}
    {% if not item.private %}
    <tr>
        <td>{{ item.designation }}</td>
        <td>{{ item.reference }}</td>
        <td class="text-right">{{ item.quantity }}</td>
        <td class="text-right">{{ item.shipped }}{% if 0 < item.returned %} (-{{ item.returned }}){% endif %}</td>
        <td class="text-right">{{ item.invoiced }}{% if 0 < item.credited %} (-{{ item.credited }}){% endif %}</td>
    </tr>
    {% import _self as macros %}
    {% for child in item.children -%}
        {{ macros.item_line(child) }}
    {%- endfor %}
    {% endif %}
{% endmacro %}
<table class="table table-condensed">
<thead>
<tr>
    <th>{{ 'ekyna_core.field.designation'|trans }}</th>
    <th>{{ 'ekyna_core.field.reference'|trans }}</th>
    <th>{{ 'ekyna_core.field.quantity'|trans }}</th>
    <th>{{ 'ekyna_commerce.sale_item.field.shipped'|trans }}</th>
    <th>{{ 'ekyna_commerce.sale_item.field.invoiced'|trans }}</th>
</tr>
</thead>
<tbody>
{% for item in items -%}
    {{ macros.item_line(item) }}
{%- endfor %}
</tbody>
</table>
{% if description is not empty -%}
    <p><strong>{{ 'ekyna_commerce.field.description'|trans }}</strong> {{ description|raw }}</p>
{%- endif %}
{% if comment is not empty -%}
    <p><strong>{{ 'ekyna_core.field.comment'|trans }}</strong> {{ comment|raw }}</p>
{%- endif %}
{% endspaceless %}