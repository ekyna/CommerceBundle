{% extends '@EkynaCommerce/Cart/layout.html.twig' %}


{% block metas %}
    {{ cms_metas() }}
{% endblock metas %}


{% block content %}
{% apply spaceless %}
    <div class="container checkout">
        {{- cms_title() -}}
        {{- cms_content() -}}

        <hr>

        {{- order.payments|last|payment_state_message|raw -}}

        <p class="text-center">
            {{- 'checkout.confirmation.order_state'|trans({}, 'EkynaCommerce') }} {{ order|sale_state_badge -}}
        </p>

        {{- render_sale_view(order|sale_view({
            'private': false,
            'editable': false,
            'taxes_view': false
        })) -}}

        {%- if order.customer is not null and is_granted('ROLE_USER') -%}
        <p class="text-center">
            <a href="{{ path('ekyna_commerce_account_order_read', {'number': order.number}) }}" class="btn btn-primary">
                {{- 'checkout.confirmation.see_details'|trans({}, 'EkynaCommerce') -}}
            </a>
        </p>
        {%- endif %}
    </div>
{% endapply %}
{% endblock content %}


{% block stylesheets -%}
    {{ parent() }}
    <link href="{{ absolute_url(asset('bundles/ekynacommerce/css/sale-view.css')) }}" type="text/css" rel="stylesheet"/>
{%- endblock stylesheets %}


{#{% block javascripts -%}
    {{ parent() }}
    <script type="text/javascript">require(['ekyna-commerce/sale-view']);</script>
{%- endblock javascripts %}#}
