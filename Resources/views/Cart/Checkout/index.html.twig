{% extends "EkynaCommerceBundle:Cart:layout.html.twig" %}

{% import 'EkynaCommerceBundle:Cart:macros.html.twig' as macros %}

{% block metas %}
    {{ cms_metas() }}
{% endblock metas %}


{% block content %}
    <div class="container">
        {{ cms_title() }}
        {{ cms_content() }}
    </div>

    <div class="checkout cart-checkout" data-refresh-url="{{ path('ekyna_commerce_cart_checkout_index') }}">
    {% if cart is not same as(null) %}

        {# Cart view #}
        <div class="container cart-checkout-view">
            {{ render_sale_view(view, 'EkynaCommerceBundle:Common:sale_view_editable.html.twig') }}
        </div>

        {# Login #}
        <div class="cart-checkout-customer"{% if controls.customer == 1 %} style="display:none"{% endif %}">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <p class="user-case"{% if controls.user == 0 %} style="display:none"{% endif %}>
                            {{- 'ekyna_commerce.checkout.message.register'|trans -}}
                        </p>
                        <p class="no-user-case"{% if controls.user == 1 %} style="display:none"{% endif %}>
                            {{ 'ekyna_commerce.checkout.message.sign_in_or_register'|trans }}
                        </p>
                    </div>
                    <div class="col-md-4">
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('fos_user_security_login', {'target_path': 'ekyna_commerce_cart_checkout_index'}) }}"
                               class="btn btn-primary no-user-case"{% if controls.user == 1 %} style="display:none"{% endif %} data-user-modal>
                                {{ 'ekyna_commerce.checkout.index.sign_in'|trans }}
                            </a>
                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">
                                {{ 'ekyna_commerce.checkout.index.register'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Forms #}
        <div class="cart-checkout-forms"{% if controls.empty == 1 %} style="display:none"{% endif %}">
            <div class="container">
                <div class="row">
                    {# Information #}
                    <div class="col-md-4">
                        <h3>
                            <a href="{{ path('ekyna_commerce_cart_information') }}"
                               class="btn btn-primary btn-sm pull-right" data-cart-modal>
                                {{- 'ekyna_core.button.edit'|trans -}}
                            </a>
                            {{ 'ekyna_commerce.checkout.index.information'|trans }}<span>*</span>
                        </h3>
                        <div class="panel panel-default">
                            <div class="panel-body cart-checkout-information">
                                {{ macros.cart_information(cart) }}
                            </div>
                        </div>
                    </div>

                    {# Invoice #}
                    <div class="col-md-4">
                        <h3>
                            <a href="{{ path('ekyna_commerce_cart_invoice_address') }}"
                               class="btn btn-primary btn-sm pull-right" data-cart-modal>
                                {{- 'ekyna_core.button.edit'|trans -}}
                            </a>
                            {{ 'ekyna_commerce.checkout.index.invoice'|trans }}<span>*</span>
                        </h3>
                        <div class="panel panel-default">
                            <div class="panel-body cart-checkout-invoice-address">
                                {{ macros.cart_invoice_address(cart) }}
                            </div>
                        </div>
                    </div>

                    {# Delivery #}
                    <div class="col-md-4">
                        <h3>
                            <a href="{{ path('ekyna_commerce_cart_delivery_address') }}"
                               class="btn btn-primary btn-sm pull-right" data-cart-modal>
                                {{- 'ekyna_core.button.edit'|trans -}}
                            </a>
                            {{ 'ekyna_commerce.checkout.index.delivery'|trans }}
                        </h3>
                        <div class="panel panel-default">
                            <div class="panel-body cart-checkout-delivery-address">
                                {{ macros.cart_delivery_address(cart) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    {# Comment #}
                    <div class="col-md-6">
                        <h3>
                            <a href="{{ path('ekyna_commerce_cart_comment') }}"
                               class="btn btn-primary btn-sm pull-right" data-cart-modal>
                                {{- 'ekyna_core.button.edit'|trans -}}
                            </a>
                            {{ 'ekyna_commerce.checkout.index.comment'|trans }}
                        </h3>
                        <div class="panel panel-default">
                            <div class="panel-body cart-checkout-comment">
                                {{ macros.cart_comment(cart) }}
                            </div>
                        </div>
                    </div>
                    {# Attachments #}
                    <div class="col-md-6">
                        <h3>
                            <a href="{{ path('ekyna_commerce_cart_attachment_add') }}"
                               class="btn btn-primary btn-sm pull-right" data-cart-modal>
                                {{- 'ekyna_core.button.add'|trans -}}
                            </a>
                            {{ 'ekyna_commerce.checkout.index.attachments'|trans }}
                        </h3>
                        <div class="panel panel-default">
                            <div class="panel-body cart-checkout-attachments">
                                {{ macros.cart_attachments(cart) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Submit #}
        <div class="container cart-checkout-submit"{% if controls.valid == 0 %} style="display:none"{% endif %}>
            <div class="row">
                <div class="col-sm-12">
                    <p class="text-center">
                        <a href="{{ path('ekyna_commerce_cart_checkout_shipment') }}" class="btn btn-primary btn-lg">
                            {{ 'ekyna_commerce.checkout.index.place_order'|trans }}
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </p>
                </div>
            </div>
        </div>

    {% else %}

        {# Empty cart #}
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <p>{{ 'ekyna_commerce.checkout.index.empty'|trans }}.</p>
                </div>
            </div>
        </div>

    {% endif %}
    </div>

{% endblock content %}


{% block stylesheets -%}
    {{ parent() }}
    <link href="{{ asset('bundles/ekynacommerce/css/sale-view.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('bundles/ekynacommerce/css/checkout.css') }}" type="text/css" rel="stylesheet"/>
{%- endblock stylesheets %}


{% block javascripts -%}
    {{ parent() }}
    <script type="text/javascript">require(['ekyna-commerce/sale-view']);</script>
    <script type="text/javascript">require(['ekyna-commerce/checkout']);</script>
{%- endblock javascripts %}
