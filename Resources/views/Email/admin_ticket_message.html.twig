{% extends "email.html.twig" %}

{% block stylesheets %}
{{ parent() }}
<style>
    table { border-right: 1px solid #ddd; border-bottom: 1px solid #ddd; width: 100% }
    td, th { font-size: 13px; padding: 2px 4px; border-top: 1px solid #ddd; border-left: 1px solid #ddd; }
    p { margin-bottom: 10px; }
</style>
{% endblock stylesheets %}

{% block subject %}{{ subject|raw }}{% endblock subject %}

{% block body %}
{% apply spaceless %}
    {{ 'ticket_message.notify.admin.content'|trans({}, 'EkynaCommerce')|raw }}
    <table border="0" cellpadding="0" cellspacing="0">
        <thead>
        <tr>
            <th>Ticket</th>
            <th>Message</th>
        </tr>
        </thead>
        <tbody>
        {% for message in messages -%}
        <tr>
            <td>
                <a href="{{ admin_resource_path(message.ticket, 'admin_read', {}, true) }}">
                    {{- message.ticket.number -}}
                </a>
            </td>
            <td>
                {{- message.content|raw -}}
            </td>
        </tr>
        {%- endfor %}
        </tbody>
    </table>
    {{- get_setting('commerce.email_signature')|raw -}}
{% endapply %}
{% endblock body %}
