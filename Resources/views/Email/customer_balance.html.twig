{% extends "email.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        table { border-right: 1px solid #ddd; border-bottom: 1px solid #ddd; width: 100% }
        td, th { font-size: 13px; padding: 2px 4px; border-top: 1px solid #ddd; border-left: 1px solid #ddd; }
        p { margin-bottom: 10px; }
    </style>
{% endblock stylesheets %}

{% block subject %}{{ subject|raw }}{% endblock subject %}

{% block body %}
{% apply spaceless %}
    {% do trans_set_locale(locale) %}
    <p>{{ 'notify.type.balance.message'|trans({}, 'EkynaCommerce') }}</p>
    <table>
        <thead>
        <tr>
            <th>{{ 'field.date'|trans({}, 'EkynaUi') }}</th>
            <th>{{ 'field.number'|trans({}, 'EkynaUi') }}</th>
            <th>{{ 'customer.balance.order_date'|trans({}, 'EkynaCommerce') }}</th>
            <th>{{ 'order.label.singular'|trans({}, 'EkynaCommerce') }}</th>
            <th>{{ 'sale.field.voucher_number'|trans({}, 'EkynaCommerce') }}</th>
            <th>{{ 'field.label'|trans({}, 'EkynaUi') }}</th>
            <th>{{ 'customer.balance.debit'|trans({}, 'EkynaCommerce') }}</th>
            <th>{{ 'customer.balance.credit'|trans({}, 'EkynaCommerce') }}</th>
            <th>{{ 'customer.balance.due_date'|trans({}, 'EkynaCommerce') }}</th>
        </tr>
        </thead>
        <tbody>
        {%- include "@EkynaCommerce/Js/customer_balance_rows.html.twig" with {
            'balance': balance
        } only -%}
        </tbody>
    </table>

    {{- get_setting('commerce.email_signature', locale)|raw -}}
    {% do trans_revert_locale() %}
{% endapply %}
{% endblock body %}
