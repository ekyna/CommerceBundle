<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/cart.xml"/>
        <import resource="services/invoice.xml"/>
        <import resource="services/customer.xml"/>
        <import resource="services/document.xml"/>
        <import resource="services/form.xml"/>
        <import resource="services/helper.xml"/>
        <import resource="services/order.xml"/>
        <import resource="services/payment.xml"/>
        <import resource="services/pricing.xml"/>
        <import resource="services/quote.xml"/>
        <import resource="services/sale.xml"/>
        <import resource="services/serializer.xml"/>
        <import resource="services/shipment.xml"/>
        <import resource="services/stock.xml"/>
        <import resource="services/supplier.xml"/>
        <import resource="services/table.xml"/>
        <import resource="services/twig.xml"/>
        <import resource="services/validators.xml"/>
        <import resource="services/view.xml"/>
    </imports>

    <parameters>
        <parameter key="ekyna_commerce.genders.class">Ekyna\Bundle\CommerceBundle\Model\Genders</parameter>

        <parameter key="ekyna_commerce.shipment_price.list_template">EkynaCommerceBundle:Admin/ShipmentPrice:list.html.twig</parameter>
        <parameter key="ekyna_commerce.stock_unit.list_template">EkynaCommerceBundle:Admin/Stock:stock_units.html.twig</parameter>
        <parameter key="ekyna_commerce.subject_stock.list_template">EkynaCommerceBundle:Admin/Stock:subjects_stock.html.twig</parameter>
        <parameter key="ekyna_commerce.supplier_address.class">Ekyna\Component\Commerce\Supplier\Entity\SupplierAddress</parameter>
    </parameters>

    <!-- TODO remove parameters (some are defined by configuration, other are useless : view builders) -->

    <services>

        <!-- Settings Schema -->
        <service id="ekyna_commerce.settings"
                 class="Ekyna\Bundle\CommerceBundle\Service\Settings\CommerceSettingsSchema">
            <tag name="ekyna_setting.schema" namespace="commerce" position="5" />
        </service>

        <!-- Notification builder -->
        <service id="ekyna_commerce.notification.builder"
                 class="Ekyna\Bundle\CommerceBundle\Service\Notification\NotificationBuilder">
            <argument type="service" id="ekyna_setting.manager"/>
            <argument type="service" id="ekyna_user.user.provider"/>
            <argument type="service" id="ekyna_user.user.repository"/>
            <argument type="service" id="ekyna_user.group.repository"/>
        </service>

        <!-- Country repository -->
        <service id="ekyna_commerce.country.repository"
                 class="Ekyna\Component\Commerce\Bridge\Doctrine\ORM\Repository\CountryRepository">
            <factory service="doctrine.orm.entity_manager" method="getRepository"/>
            <argument>%ekyna_commerce.country.class%</argument>
            <call method="setDefaultCode">
                <argument>%ekyna_commerce.default.country%</argument>
            </call>
        </service>

        <!-- Currency repository -->
        <service id="ekyna_commerce.currency.repository"
                 class="Ekyna\Component\Commerce\Bridge\Doctrine\ORM\Repository\CurrencyRepository">
            <factory service="doctrine.orm.entity_manager" method="getRepository"/>
            <argument>%ekyna_commerce.currency.class%</argument>
            <call method="setDefaultCode">
                <argument>%ekyna_commerce.default.currency%</argument>
            </call>
        </service>

        <!-- Currency converter -->
        <service id="ekyna_commerce.currency.converter"
                 class="Ekyna\Component\Commerce\Bridge\Swap\SwapCurrencyConverter">
            <argument type="service" id="florianv_swap.swap"/>
            <argument>%ekyna_commerce.default.currency%</argument>
        </service>

        <!-- Security listener -->
        <service id="ekyna_commerce.security_listener"
                 class="Ekyna\Bundle\CommerceBundle\EventListener\SecurityListener">
            <argument type="service" id="ekyna_commerce.cart.session_provider"/>
            <argument type="service" id="ekyna_commerce.customer.security_provider"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- OAuth authentication handlers -->
        <service id="ekyna_commerce.security.oauth_authentication_success_handler"
                 class="Ekyna\Bundle\CommerceBundle\Service\Security\OAuthAuthenticationSuccessHandler"
                 parent="security.authentication.success_handler"
                 public="false">
            <call method="setCustomerProvider">
                <argument type="service" id="ekyna_commerce.customer.security_provider"/>
            </call>
        </service>

        <!-- Security logout handler -->
        <service id="ekyna_commerce.security.logout_handler"
                 class="Ekyna\Bundle\CommerceBundle\Service\Security\LogoutHandler">
            <argument type="service" id="ekyna_commerce.cart.session_provider"/>
            <argument type="service" id="ekyna_commerce.customer.security_provider"/>
        </service>

        <!-- In charge resolver -->
        <service id="ekyna_commerce.common.in_charge_resolver"
                 class="Ekyna\Bundle\CommerceBundle\Service\Common\InChargeResolver">
            <argument type="service" id="ekyna_user.user.provider" />
            <argument type="service" id="ekyna_user.user.manager" />
            <argument type="service" id="security.authorization_checker" />
        </service>

        <!-- Uploader -->
        <service id="ekyna_commerce.common.uploader"
                 class="Ekyna\Bundle\CoreBundle\Uploader\Uploader">
            <argument type="service" id="oneup_flysystem.mount_manager" />
            <argument>local_commerce</argument>
        </service>

        <!-- Uploadable listener -->
        <service id="ekyna_commerce.common.uploadable_listener"
                 class="Ekyna\Component\Commerce\Common\Listener\UploadableListener">
            <argument type="service" id="ekyna_commerce.common.uploader" />
            <tag name="doctrine.orm.entity_listener" />
        </service>

        <!-- Load metadata listener -->
        <service id="ekyna_commerce.doctrine.orm.listener.load_metadata_listener"
                 class="Ekyna\Component\Commerce\Bridge\Doctrine\ORM\Listener\LoadMetadataListener"
                 public="false">
            <tag name="doctrine.event_subscriber" connection="default" priority="99"/>
        </service>

        <!-- Mailer -->
        <service id="ekyna_commerce.mailer"
                 class="Ekyna\Bundle\CommerceBundle\Service\Mailer\Mailer">
            <argument type="service" id="mailer" />
            <argument type="service" id="templating"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="ekyna_setting.manager"/>
            <argument type="service" id="ekyna_commerce.document.renderer_factory"/>
            <argument type="service" id="local_commerce_filesystem"/>
        </service>

        <!-- Subject providers registry-->
        <service id="ekyna_commerce.subject.provider_registry"
                 class="Ekyna\Component\Commerce\Subject\Provider\SubjectProviderRegistry"/>

        <!-- Subject purchase cost guesser -->
        <service id="ekyna_commerce.subject.purchase_cost_guesser"
                 class="Ekyna\Component\Commerce\Subject\Guesser\PurchaseCostGuesser"
                 lazy="true">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="ekyna_commerce.supplier_order_item.repository"/>
            <argument type="service" id="ekyna_commerce.supplier_product.repository"/>
            <argument type="service" id="ekyna_commerce.currency.converter"/>
            <argument>%ekyna_commerce.default.currency%</argument>
        </service>

        <!-- Subject label renderer -->
        <service id="ekyna_commerce.subject.label_renderer"
                 class="Ekyna\Bundle\CommerceBundle\Service\Subject\LabelRenderer">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="templating"/>
            <argument>%knp_snappy.pdf.binary%</argument>
        </service>

        <!-- Sale item event listener -->
        <service id="ekyna_commerce.sale_item.event_subscriber"
                 class="Ekyna\Bundle\CommerceBundle\EventListener\SaleItemEventSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>

</container>
