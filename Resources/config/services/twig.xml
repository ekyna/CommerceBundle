<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Barcode extension -->
        <service id="ekyna_commerce.twig.barcode_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\BarcodeExtension"
                 public="false">
            <tag name="twig.extension"/>
        </service>

        <!-- Checkout extension -->
        <service id="ekyna_commerce.twig.checkout_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\CheckoutExtension"
                 public="false">
            <argument type="service" id="event_dispatcher"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Common extension -->
        <service id="ekyna_commerce.twig.common_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\CommonExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <argument type="service" id="ekyna_commerce.common.address_renderer"/>
            <argument type="service" id="ekyna_commerce.common.button_renderer"/>
            <argument type="service" id="ekyna_commerce.common.flag_renderer"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Widget extension -->
        <service id="ekyna_commerce.twig.widget_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\WidgetExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.widget_helper"/>
            <argument type="collection"/><!-- TODO Config -->
            <tag name="twig.extension"/>
        </service>

        <!-- Document extension -->
        <service id="ekyna_commerce.twig.document_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\DocumentExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.document.page_builder"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Invoice extension -->
        <service id="ekyna_commerce.twig.invoice_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\InvoiceExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <argument type="service" id="ekyna_commerce.pricing.tax_resolver"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Payment extension -->
        <service id="ekyna_commerce.twig.payment_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\PaymentExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <argument type="service" id="ekyna_admin.helper.resource_helper"/>
            <argument type="service" id="translator"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Sale extension -->
        <service id="ekyna_commerce.twig.sale_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\SaleExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <argument type="service" id="ekyna_commerce.common.context_provider"/>
            <argument type="service" id="ekyna_commerce.common.view_builder"/>
            <argument type="service" id="ekyna_core.ui.renderer" />
            <argument type="service" id="router" />
            <tag name="twig.extension"/>
        </service>

        <!-- Shipment extension -->
        <service id="ekyna_commerce.twig.shipment_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\ShipmentExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <argument type="service" id="ekyna_commerce.shipment_price.list_builder"/>
            <argument type="service" id="ekyna_commerce.shipment_helper"/>
            <argument>%ekyna_commerce.shipment_price.list_template%</argument>
            <tag name="twig.extension"/>
        </service>

        <!-- Stock extension -->
        <service id="ekyna_commerce.twig.stock_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\StockExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <argument type="service" id="ekyna_commerce.stock.stock_renderer"/>
            <argument type="service" id="ekyna_commerce.availability_helper"/>
            <argument type="service" id="ekyna_commerce.stock_prioritizer"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Subject extension -->
        <service id="ekyna_commerce.twig.subject_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\SubjectExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.subject_helper"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Supplier extension -->
        <service id="ekyna_commerce.twig.supplier_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\SupplierExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <argument type="service" id="ekyna_commerce.supplier_order.calculator"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Support extension -->
        <service id="ekyna_commerce.twig.support_extension"
                 class="Ekyna\Bundle\CommerceBundle\Twig\SupportExtension"
                 public="false">
            <argument type="service" id="ekyna_commerce.ticket.renderer"/>
            <argument type="collection"/><!-- Replace by DI extension -->
            <tag name="twig.extension"/>
        </service>

    </services>

</container>
