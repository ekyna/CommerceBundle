<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Order payment table type -->
        <service id="ekyna_commerce.order_payment.table_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Type\OrderPaymentType"><!-- TODO use parameter defined by config builder -->
            <argument>%ekyna_commerce.order_payment.class%</argument>
            <argument>%ekyna_commerce.payment_method.class%</argument>
            <tag name="table.type"/>
        </service>

        <!-- Order shipment table type -->
        <service id="ekyna_commerce.order_shipment.table_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Type\OrderShipmentType"><!-- TODO use parameter defined by config builder -->
            <argument type="service" id="ekyna_commerce.shipment_helper"/>
            <argument type="service" id="translator"/>
            <argument>%ekyna_commerce.order_shipment.class%</argument>
            <argument>%ekyna_commerce.shipment_method.class%</argument>
            <tag name="table.type"/>
        </service>

        <!-- Customer state column type -->
        <service id="ekyna_commerce.customer_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\CustomerStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Customer column type -->
        <service id="ekyna_commerce.order_customer.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\SaleCustomerType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Invoice type column type -->
        <service id="ekyna_commerce.invoice_type.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\InvoiceTypeType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Order(s) column type -->
        <service id="ekyna_commerce.order.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\OrderType">
            <argument type="service" id="router"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Order state column type -->
        <service id="ekyna_commerce.order_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\SaleStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Order prepare action type -->
        <service id="ekyna_commerce.order_prepare.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\OrderPrepareActionType">
            <argument type="service" id="ekyna_commerce.sale_preparer"/>
            <argument type="service" id="ekyna_commerce.order.manager"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Order abort action type -->
        <service id="ekyna_commerce.order_abort.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\OrderAbortActionType">
            <argument type="service" id="ekyna_commerce.sale_preparer"/>
            <argument type="service" id="ekyna_commerce.order.manager"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Payment state column type -->
        <service id="ekyna_commerce.payment_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\PaymentStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Quote(s) column type -->
        <service id="ekyna_commerce.quote.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\QuoteType">
            <argument type="service" id="router"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Sale flags column type -->
        <service id="ekyna_commerce.sale_flags.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\SaleFlagsType">
            <argument type="service" id="ekyna_commerce.common.renderer"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Shipment state column type -->
        <service id="ekyna_commerce.shipment_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\ShipmentStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Shipment weight column type -->
        <service id="ekyna_commerce.shipment_weight.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\ShipmentWeightType">
            <argument type="service" id="ekyna_commerce.shipment_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Shipment tracking number column type -->
        <service id="ekyna_commerce.shipment_tracking_number.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\ShipmentTrackingNumberType">
            <argument type="service" id="ekyna_commerce.shipment_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Invoice state column type -->
        <service id="ekyna_commerce.invoice_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\InvoiceStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Shipment actions column type -->
        <service id="ekyna_commerce.shipment_actions.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\ShipmentActionsType">
            <argument type="service" id="ekyna_commerce.shipment_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Shipment ship action type -->
        <service id="ekyna_commerce.shipment_ship.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\ShipmentShipActionType">
            <argument type="service" id="ekyna_commerce.shipment.gateway_registry"/>
            <argument type="service" id="ekyna_commerce.shipment.persister"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Shipment print label action type -->
        <service id="ekyna_commerce.shipment_print_label.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\ShipmentPrintLabelActionType">
            <argument type="service" id="ekyna_commerce.shipment.gateway_registry"/>
            <argument type="service" id="ekyna_commerce.shipment.persister"/>
            <argument type="service" id="ekyna_commerce.shipment.label_renderer"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Shipment cancel action type -->
        <service id="ekyna_commerce.shipment_cancel.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\ShipmentCancelActionType">
            <argument type="service" id="ekyna_commerce.shipment.gateway_registry"/>
            <argument type="service" id="ekyna_commerce.shipment.persister"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Shipment prepare action type -->
        <service id="ekyna_commerce.shipment_prepare.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\ShipmentPrepareActionType">
            <argument type="service" id="ekyna_commerce.order_shipment.manager"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Shipment remove action type -->
        <service id="ekyna_commerce.shipment_remove.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\ShipmentRemoveActionType">
            <argument type="service" id="ekyna_commerce.order_shipment.manager"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Shipment document action type -->
        <service id="ekyna_commerce.shipment_document.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\ShipmentDocumentActionType">
            <argument type="service" id="router"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Invoice form action type -->
        <service id="ekyna_commerce.invoice_form.action_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Action\InvoiceDocumentActionType">
            <argument type="service" id="router"/>
            <tag name="table.action_type"/>
        </service>

        <!-- Stock subject state column type -->
        <service id="ekyna_commerce.stock_subject_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\StockSubjectStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Stock subject mode column type -->
        <service id="ekyna_commerce.stock_subject_mode.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\StockSubjectModeType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Supplier order table type -->
        <service id="ekyna_commerce.supplier_order.table_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Type\SupplierOrderType"><!-- TODO use parameter defined by config builder -->
            <argument>%ekyna_commerce.supplier_order.class%</argument>
            <argument>%ekyna_commerce.supplier.class%</argument>
            <argument>%ekyna_commerce.supplier_carrier.class%</argument>
            <tag name="table.type"/>
        </service>

        <!-- Supplier order payment column type -->
        <service id="ekyna_commerce.supplier_order_payment.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\SupplierOrderPaymentType">
            <argument type="service" id="ekyna_commerce.util.formatter.default"/>
            <argument type="service" id="translator"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Supplier order tracking column type -->
        <service id="ekyna_commerce.supplier_order_tracking.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\SupplierOrderTrackingType">
            <argument type="service" id="translator"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Supplier order state column type -->
        <service id="ekyna_commerce.supplier_order_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\SupplierOrderStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Ticket state column type -->
        <service id="ekyna_commerce.ticket_state.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\TicketStateType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Vat display mode column type -->
        <service id="ekyna_commerce.vat_display_mode.column_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Column\VatDisplayModeType">
            <argument type="service" id="ekyna_commerce.constants_helper"/>
            <tag name="table.column_type"/>
        </service>

        <!-- Supplier product table type -->
        <service id="ekyna_commerce.supplier_product.table_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Type\SupplierProductType"><!-- TODO use parameter defined by config builder -->
            <argument>%ekyna_commerce.supplier_product.class%</argument>
            <argument>%ekyna_commerce.supplier.class%</argument>
            <tag name="table.type"/>
        </service>

        <!-- Customer(s) filter type -->
        <service id="ekyna_commerce.customer.filter_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Filter\CustomerType">
            <argument>%ekyna_commerce.customer.class%</argument>
            <tag name="table.filter_type"/>
        </service>

        <!-- In charge filter type -->
        <service id="ekyna_commerce.customer_group.filter_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Filter\CustomerGroupType">
            <argument>%ekyna_commerce.customer_group.class%</argument>
            <tag name="table.filter_type"/>
        </service>

        <!-- In charge filter type -->
        <service id="ekyna_commerce.sale.in_charge.filter_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Filter\InChargeType">
            <argument type="service" id="ekyna_admin.group.repository"/>
            <argument>%ekyna_admin.user.class%</argument>
            <tag name="table.filter_type"/>
        </service>

        <!-- Order(s) filter type -->
        <service id="ekyna_commerce.order.filter_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Filter\OrderType">
            <argument>%ekyna_commerce.order.class%</argument>
            <tag name="table.filter_type"/>
        </service>

        <!-- Order tags filter type -->
        <service id="ekyna_commerce.sale.tags.filter_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Filter\SaleTagsType">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument>%ekyna_cms.tag.class%</argument>
            <tag name="table.filter_type"/>
        </service>

        <!-- Order tags filter type -->
        <service id="ekyna_commerce.sale.subject.filter_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Filter\SaleSubjectType">
            <argument type="service" id="ekyna_commerce.subject.provider_registry"/>
            <tag name="table.filter_type"/>
        </service>

        <!-- Quote(s) filter type -->
        <service id="ekyna_commerce.quote.filter_type"
                 class="Ekyna\Bundle\CommerceBundle\Table\Filter\QuoteType">
            <argument>%ekyna_commerce.quote.class%</argument>
            <tag name="table.filter_type"/>
        </service>

    </services>

</container>
