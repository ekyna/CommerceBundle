<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Document builder -->
        <service id="ekyna_commerce.document.builder"
                 class="Ekyna\Component\Commerce\Document\Builder\DocumentBuilder"
                 lazy="true">
            <argument type="service" id="ekyna_commerce.common.context_provider"/>
            <argument type="service" id="libphonenumber.phone_number_util"/>
        </service>

        <!-- Document calculator -->
        <service id="ekyna_commerce.document.calculator"
                 class="Ekyna\Component\Commerce\Document\Calculator\DocumentCalculator"
                 lazy="true">
            <argument type="service" id="ekyna_commerce.common.amount_calculator"/>
        </service>

        <!-- Document renderer factory -->
        <service id="ekyna_commerce.document.renderer_factory"
                 class="Ekyna\Bundle\CommerceBundle\Service\Document\RendererFactory"
                 lazy="true">
            <argument type="service" id="templating"/>
            <argument type="service" id="knp_snappy.pdf"/>
            <argument type="service" id="knp_snappy.image"/>
            <argument>%ekyna_commerce.company_logo%</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <!-- Document generator -->
        <service id="ekyna_commerce.document.generator"
                 class="Ekyna\Bundle\CommerceBundle\Service\Document\DocumentGenerator"
                 lazy="true">
            <argument type="service" id="ekyna_commerce.document.builder"/>
            <argument type="service" id="ekyna_commerce.document.calculator"/>
            <argument type="service" id="ekyna_commerce.document.renderer_factory"/>
            <argument type="service" id="ekyna_commerce.sale_factory"/>
            <argument type="service" id="translator"/>
        </service>

    </services>

</container>
