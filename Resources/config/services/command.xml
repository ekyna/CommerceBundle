<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Invoice recalculate -->
        <service id="ekyna_commerce.command.invoice.recalculate"
                 class="Ekyna\Bundle\CommerceBundle\Command\InvoiceRecalculateCommand">
            <argument type="service" id="ekyna_commerce.order_invoice.repository"/>
            <argument type="service" id="ekyna_commerce.document.calculator"/>
            <argument type="service" id="ekyna_commerce.order_invoice.manager"/>
            <tag name="console.command"/>
        </service>

        <!-- Shipment label purge -->
        <service id="ekyna_commerce.command.shipment.purge_label"
                 class="Ekyna\Bundle\CommerceBundle\Command\ShipmentLabelPurgeCommand">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <tag name="console.command"/>
        </service>

        <!-- Ticket message notify command -->
        <service id="ekyna_commerce.command.ticket_message.notify"
                 class="Ekyna\Bundle\CommerceBundle\Command\SupportNotifyCommand">
            <argument type="service" id="ekyna_commerce.ticket_message.repository"/>
            <argument type="service" id="ekyna_admin.user.repository"/>
            <argument type="service" id="ekyna_commerce.ticket_message.manager"/>
            <argument type="service" id="ekyna_commerce.mailer"/>
            <tag name="console.command"/>
        </service>

    </services>

</container>