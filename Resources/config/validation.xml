<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
        xmlns="http://symfony.com/schema/dic/constraint-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <!-- Customer -->

    <class name="Ekyna\Bundle\CommerceBundle\Entity\Customer">
        <property name="user">
            <constraint name="Valid"/>
        </property>
    </class>

    <!-- PaymentMethod -->

    <class name="Ekyna\Bundle\CommerceBundle\Entity\PaymentMethod">
        <property name="factoryName">
            <constraint name="NotBlank" />
        </property>
        <property name="media">
            <constraint name="Ekyna\Bundle\MediaBundle\Validator\Constraints\MediaTypes">
                <option name="types">image</option>
            </constraint>
        </property>
    </class>

    <!-- ShipmentMethod -->

    <class name="Ekyna\Bundle\CommerceBundle\Entity\ShipmentMethod">
        <property name="media">
            <constraint name="Ekyna\Bundle\MediaBundle\Validator\Constraints\MediaTypes">
                <option name="types">image</option>
            </constraint>
        </property>
    </class>

    <!-- Registration -->

    <class name="Ekyna\Bundle\CommerceBundle\Model\Registration">
        <constraint name="Ekyna\Bundle\CommerceBundle\Validator\Constraints\Registration"/>
        <property name="customer">
            <constraint name="Valid"/>
        </property>
        <property name="invoiceAddress">
            <constraint name="Valid"/>
        </property>
        <property name="invoiceContact">
            <constraint name="Valid"/>
        </property>
        <property name="applyGroup">
            <constraint name="NotNull"/>
        </property>
    </class>

    <!-- Contact -->

    <class name="Ekyna\Bundle\CommerceBundle\Model\Contact">
        <constraint name="Ekyna\Component\Commerce\Bridge\Symfony\Validator\Constraints\Identity">
            <option name="required">false</option>
            <option name="groups">
                <value>Default</value>
                <value>Registration</value>
            </option>
        </constraint>
        <property name="email">
            <constraint name="Email">
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                </option>
            </constraint>
        </property>
    </class>

    <!-- Notification -->

    <class name="Ekyna\Bundle\CommerceBundle\Model\Notification">
        <property name="from">
            <constraint name="NotNull"/>
            <constraint name="Valid"/>
        </property>
        <property name="recipients">
            <constraint name="Count">
                <option name="min">1</option>
            </constraint>
            <constraint name="Valid"/>
        </property>
        <property name="extraRecipients">
            <constraint name="Valid"/>
        </property>
        <property name="copies">
            <constraint name="Valid"/>
        </property>
        <property name="extraCopies">
            <constraint name="Valid"/>
        </property>
        <property name="subject">
            <constraint name="NotBlank"/>
        </property>
    </class>

    <!-- Recipient -->

    <class name="Ekyna\Bundle\CommerceBundle\Model\Recipient">
        <property name="email">
            <constraint name="NotNull"/>
            <constraint name="Email"/>
        </property>
    </class>

    <!-- Supplier order submit -->

    <class name="Ekyna\Bundle\CommerceBundle\Model\SupplierOrderSubmit">
        <property name="emails">
            <constraint name="Count">
                <option name="min">1</option>
            </constraint>
            <constraint name="All">
                <constraint name="NotBlank"/>
                <constraint name="Email"/>
            </constraint>
        </property>
        <property name="confirm">
            <constraint name="IsTrue"/>
        </property>
        <property name="order">
            <constraint name="Valid"/>
        </property>
    </class>


</constraint-mapping>
